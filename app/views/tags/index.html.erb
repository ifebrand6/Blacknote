<% provide(:title, "Listing tags") %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Keyword</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.keyword %></td>
        <td>
          <div class="btn-group">
            <%= link_to tag, class: "btn btn-xs btn-default" do %>
              <%= fa_icon("eye", text: "Show") %>
            <% end %>
            <%= link_to edit_tag_path(tag), class: "btn btn-xs btn-default" do %>
              <%= fa_icon("pencil", text: "Edit") %>
            <% end %>
            <%= link_to tag, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this tag?" } do %>
              <%= fa_icon("trash-o", text: "Destroy") %>
            <% end %>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_tag_path, class: "btn btn-default" do %>
  <%= fa_icon("plus", text: "New Tag") %>
<% end %>
