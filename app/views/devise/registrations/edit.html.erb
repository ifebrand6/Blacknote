<h2>Edit <%= resource_name.to_s.humanize %></h2>



<section class="content">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Edit User details
                <small>BlacKnote</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item">
                    <%= link_to root_path do %> 
                         <i class="zmdi zmdi-home"></i> BlacKnote
                    <%end%>
                    </li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">User</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">        
        <!-- Vertical Layout -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2><strong>Your</strong> Details</h2>
                    </div>
                    <div class="body">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                           <%= render "devise/shared/error_messages", resource: resource %>
                            <%= f.label :email, for: 'email_address'%>
                            <div class="form-group">
                                <%= f.email_field :email, class: 'form-control'%>   
                                
                            </div>
                            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                            <% end %>
                            <%= f.label :password, for: 'password'%>
                            <div class="form-group">      
                                <%= f.password_field :password, id: "password",class: "form-control", placeholder: "Enter new password" %>                          
                            </div>
                              <%= f.label :password_confirmation ,for: 'password'%>
                            <div class="form-group">     
                                <%= f.password_field :password_confirmation,  id: "password",class: "form-control", placeholder: "Confirm new password"  %>                           
                            </div>
                            <%= f.label :current_password,for: "password" %> <i>(we need your current password to confirm your changes)</i>
                            <div class="form-group"> 
                                <%= f.password_field :current_password, id: "password",class: "form-control", placeholder: "Enter current password"  %>                               
                            </div>
                            <%= f.submit "Update",class: "btn btn-raised btn-primary btn-round waves-effect" %>
                      <% end %>
                    </div>
                  <p>Unhappy?<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class: "btn btn-raised btn-primary btn-round waves-effect" %>
                  </p>
                  <%= link_to "Back", :back ,class: "btn btn-raised btn-primary btn-round waves-effect"%>
                </div>
            </div>
        </div>
        <!-- #END# Vertical Layout -->        
    </div>
</section>