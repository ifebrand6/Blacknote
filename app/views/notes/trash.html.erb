<% provide(:title, "Trash") %>

<table class="table table-striped">
<thead>
    <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    </tr>
</thead>
     
<tbody>
    <% @notes.each do |note| %>
    <tr>
        <td><%= note.title %></td>
        <td><%= render_with_hashtags(note.content) %></td>
        
        <td>
    <div class="btn-group">
        <%= link_to 'restore', state_path(note,type: :recover), class: 'badge' %>
        <%= link_to 'destroy', state_path(note,type: :forever), class: 'badge' %>
    </div>
    </tr>
    <% end %>
</tbody>
</table>

<br>

