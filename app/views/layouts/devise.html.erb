<!doctype html>
<html class="no-js " lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=Edge">
<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
<meta name="description" content="sQuare Bootstrap 4 Admin Dashboard with ui kit.">

<title>
<%= strip_tags(yield(:title)) + " – " if content_for?(:title) %>
Blacknote
</title>
<!-- Favicon-->
<link rel="icon" href="/main/favicon.ico" type="image/x-icon">
<link rel="stylesheet" href="/main/plugins/bootstrap/css/bootstrap.min.css">

<!-- Custom Css -->
<link rel="stylesheet" href="/main/assets/css/main.css">    
<link rel="stylesheet" href="/main/assets/css/color_skins.css">
</head>
<body class="theme-cyan">
<div class="authentication sidebar-collapse">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fixed-top navbar-transparent">
        <div class="container">        
            <div class="navbar-translate n_logo">
                <%= link_to 'ßlacKnote', root_path, class: 'navbar-brand', title: "blacknote"%>
                <button class="navbar-toggler" type="button">
                    <span class="navbar-toggler-bar bar1"></span>
                    <span class="navbar-toggler-bar bar2"></span>
                    <span class="navbar-toggler-bar bar3"></span>
                </button>
            </div>
            <div class="navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                    <%= link_to 'Home', root_path, class: 'nav-link' %>
                    </li>
                    <li class="nav-item">
                    <% if user_signed_in? %>
                         <%= link_to 'SIGN IN', new_user_session_path, class: 'nav-link btn btn-white btn-round' %>
                     <% else %>
                        <%= link_to 'SIGN UP', new_user_registration_path, class: 'nav-link btn btn-white btn-round' %>
                    <% end %>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <div class="page-header">
                <%= yield %>
        <footer class="footer">
            <div class="container">
                <nav>
                    <ul>
                        <li><%= link_to 'CONTACT US', root_path('#contact'), target: "blank"%></li>
                        <li><%= link_to 'ABOUT US', root_path('#about'), target: "blank"%></li>
                        <li><a href="javascript:void(0);">FAQ</a></li>
                    </ul>
                </nav>
                <div class="copyright">
                    &copy;
                    <script>
                        document.write(new Date().getFullYear())
                    </script>,
                    <span> <%= link_to 'ßlacKnote', root_path, target: "blank"%></span>
                </div>
            </div>
        </footer>
    </div>
</div>
<!-- Jquery Core Js -->
<script src="/main/assets/bundles/libscripts.bundle.js"></script>
<script src="/main/assets/bundles/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
<script src="/main/assets/js/pages/authentication/page.js"></script>
</body>
</html>